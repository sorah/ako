%h1 Listing categories

%table.table.table-hover
  %colgroup
    %col{style: 'width: 50%;', span: 1}
    %col{style: 'width: 30%;', span: 1}
    %col{style: 'width: 10%;', span: 1}
  %thead
    %tr
      %th Name
      %th Budget
      %th

  %tbody
    - @categories.each do |category|
      %tr
        %td
          = link_to category do
            %i{class: category.icon_class}
            = category.name
        %td= category.budget
        %td
          = link_to 'Edit', edit_category_path(category)
          = link_to 'Destroy', category, :method => :delete, :data => { :confirm => 'Are you sure?' }

%br

= link_to 'New Category', new_category_path
